generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum user_role {
  USER
  ADMIN
  SELLER
}

model user {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  picture   String    @db.Text
  role      user_role @default(USER)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}


